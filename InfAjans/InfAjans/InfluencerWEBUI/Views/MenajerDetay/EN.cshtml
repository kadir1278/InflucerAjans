@model Influencer.Entities.Entity.Inflencer
@{
    ViewBag.Title = "EN";
    Layout = "~/Views/Shared/En/_Layout.cshtml";
}
<!-- Blog section  -->
<section class="blog-section">
    <div class="blog-warp">
        <div class="row">
            <div class="col-lg-12 col-sm-12">
                <div class="blog-post">
                    <img src="~/Image/Influencers/@Model.File" alt="@Model.Name @Model.Surname">
                    <h3>@Model.Name @Model.Surname</h3>
                    <div class="blog-cata">
                        <span><i class="fa fa-instagram"></i> <i class="fa fa-user-plus"></i> @Model.InstagramFollower</span>
                        <span><i class="fa fa-twitter"></i> <i class="fa fa-user-plus"></i> @Model.TwitterFollower</span>
                        <span><i class="fa fa-facebook"></i> <i class="fa fa-user-plus"></i> @Model.FacebookFollower</span>
                    </div>
                    @Html.Raw(Model.Content)
                </div>
            </div>
            @foreach (var item in Model.InfluencerVideos)
            {
                <div class="col-lg-12 col-sm-12">
                    <div class="blog-post">
                        <img src="~/Image/Influencers/@item.InfluencerVideoPath" alt="@Model.Name @Model.Surname">
                        <h3>@item.Title</h3>
                        @Html.Raw(item.Content)
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Blog section end  -->