@model  IEnumerable<Influencer.Entities.Entity.Slider>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            if (item.Rank == 1)
            {
                if (item.ImageVideoPath.EndsWith(".PNG") || item.ImageVideoPath.EndsWith(".JPG") || item.ImageVideoPath.EndsWith(".JPEG") || item.ImageVideoPath.EndsWith(".GIF") || item.ImageVideoPath.EndsWith(".TIFF") || item.ImageVideoPath.EndsWith(".jpg") || item.ImageVideoPath.EndsWith(".png") || item.ImageVideoPath.EndsWith(".jpeg") || item.ImageVideoPath.EndsWith(".tiff") || item.ImageVideoPath.EndsWith(".gif"))
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Image/Sliders/@item.ImageVideoPath" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@item.Title</h5>
                            <p>@Html.Raw(item.Content)</p>
                        </div>
                    </div>
                }
                else if (item.ImageVideoPath.EndsWith(".avi") || item.ImageVideoPath.EndsWith(".AVI") || item.ImageVideoPath.EndsWith(".mp4") || item.ImageVideoPath.EndsWith(".MP4") || item.ImageVideoPath.EndsWith(".mov") || item.ImageVideoPath.EndsWith(".MOV") || item.ImageVideoPath.EndsWith(".flv") || item.ImageVideoPath.EndsWith(".FLV") || item.ImageVideoPath.EndsWith(".mpg") || item.ImageVideoPath.EndsWith(".MPG"))
                {
                    <div class="carousel-item active">
                        <video autoplay muted loop id="myVideo" class="d-block w-100">
                            <source src="~/Image/Sliders/@item.ImageVideoPath" type="video/mp4">
                        </video>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@item.Title</h5>
                            <p>@Html.Raw(item.Content)</p>
                        </div>
                    </div>
                }

            }
            if (item.Rank != 1)
            {
                if (item.ImageVideoPath.EndsWith(".PNG") || item.ImageVideoPath.EndsWith(".JPG") || item.ImageVideoPath.EndsWith(".JPEG") || item.ImageVideoPath.EndsWith(".GIF") || item.ImageVideoPath.EndsWith(".TIFF") || item.ImageVideoPath.EndsWith(".jpg") || item.ImageVideoPath.EndsWith(".png") || item.ImageVideoPath.EndsWith(".jpeg") || item.ImageVideoPath.EndsWith(".tiff") || item.ImageVideoPath.EndsWith(".gif"))
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Image/Sliders/@item.ImageVideoPath" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@item.Title</h5>
                            <p>@Html.Raw(item.Content)</p>
                        </div>
                    </div>
                }
                else if (item.ImageVideoPath.EndsWith(".avi") || item.ImageVideoPath.EndsWith(".AVI") || item.ImageVideoPath.EndsWith(".mp4") || item.ImageVideoPath.EndsWith(".MP4") || item.ImageVideoPath.EndsWith(".mov") || item.ImageVideoPath.EndsWith(".MOV") || item.ImageVideoPath.EndsWith(".flv") || item.ImageVideoPath.EndsWith(".FLV") || item.ImageVideoPath.EndsWith(".mpg") || item.ImageVideoPath.EndsWith(".MPG"))
                {
                    <div class="carousel-item">
                        <video autoplay muted loop class="d-block w-100" id="myVideo">
                            <source src="~/Image/Sliders/@item.ImageVideoPath" type="video/mp4">
                        </video>
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@item.Title</h5>
                            <p>@Html.Raw(item.Content)</p>
                        </div>
                    </div>
                }
            }

        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
