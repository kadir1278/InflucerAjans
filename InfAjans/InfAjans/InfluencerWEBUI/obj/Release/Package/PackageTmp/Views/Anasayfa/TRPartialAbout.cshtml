@model Influencer.Entities.Entity.About
<section class="about-section">
    <div class="section-title">
        <br />
        <h3>Hakkımızda</h3>
        <hr />
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0">
                <div class="about-bg set-bg">
                    <img src="~/Image/Abouts/@Model.ImageVideoPath" width="100%" />
                </div>
            </div>
            <div class="col-lg-6 p-0">
                <div class="about-text">
                    <h2>@Model.Title</h2>
                    <p>@Model.ShortContent ...</p>
                    <a href="/tr/hakkimizda" class="site-btn">Devamını Gör <i class="fa fa-arrow-circle-o-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
