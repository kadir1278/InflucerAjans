@model Influencer.Entities.Entity.Brand

@{
    ViewBag.Title = "UpdateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h3>Yeni Marka Güncelle</h3>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <img src="~/Areas/Admin/Context/mekasoftware/180x180-M.png" alt="Meka Software" width="50" />
                </div>
            </div>
        </div>
        @if (ViewBag.Mesaj != null)
        {
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Hata Mesajı</h4>
                    </div>
                </div>
                <div>
                    <p>@ViewBag.Mesaj</p>
                </div>
            </div>}
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Yeni Marka Güncelle</h4>
                </div>
            </div>
            <!-- Buraya Form Kısmını Ekle -->
            @using (Html.BeginForm("UpdateBrand", "Brand", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">İsim</label>
                        <div class="col-md-10">
                            <input type="text" name="Name" value="@Model.Name" class="form-control" required placeholder="Lütfen İsim Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Logo</label>
                        <div class="col-md-10">
                            <input type="file" name="LogoPath" class="form-control" placeholder="Lütfen Logo Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.LogoPath, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Dil</label>
                        <div class="col-md-10">
                            @Html.DropDownList("LangTableID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LangTableID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Aktif Durumu</label>
                        <div class="col-md-12">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.IsActive) Aktif | Pasif
                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-outline-success"><i class="fa fa-check"></i> Yeni Marka Güncelle</button>
                                <a href="/Admin/Dashboard/Brand" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!--Form bitiş-->
        </div>
    </div>
</div>