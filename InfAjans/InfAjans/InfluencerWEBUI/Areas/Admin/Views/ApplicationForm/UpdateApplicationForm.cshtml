@model Influencer.Entities.Entity.ApplicationForm

@{
    ViewBag.Title = "UpdateApplicationForm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h3>Yeni Başvuru Form Güncelle</h3>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <img src="~/Areas/Admin/Context/mekasoftware/180x180-M.png" alt="Meka Software" width="50" />
                </div>
            </div>
        </div>
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Yeni Başvuru Form Güncelle</h4>
                </div>
            </div>
            <!-- Buraya Form Kısmını Ekle -->
            @using (Html.BeginForm("UpdateApplicationForm", "ApplicationForm", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <label class="control-label col-md-2">İsim</label>
                <div class="col-md-12">
                    <input type="text" name="Name" value="@Model.Name" class="form-control" required placeholder="Lütfen İsim Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Soyisim</label>
                <div class="col-md-12">
                    <input type="text" name="Surname" value="@Model.Surname" class="form-control" required placeholder="Lütfen Soyisim Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Şehir</label>
                <div class="col-md-12">
                    <input type="text" name="City" value="@Model.City" class="form-control" required placeholder="Lütfen Şehir Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">İlçe</label>
                <div class="col-md-12">
                    <input type="text" name="District" value="@Model.District" class="form-control" required placeholder="Lütfen İlçe Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Adres</label>
                <div class="col-md-12">
                    <input type="text" name="Address" value="@Model.Address" class="form-control" required placeholder="Lütfen Adres Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Dosya</label>
                <div class="col-md-12">
                    <input type="file" name="FilePath" class="form-control" required placeholder="Lütfen Dosya Seçiniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.FilePath, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Konu</label>
                <div class="col-md-12">
                    <input type="text" name="Subject" value="@Model.Subject" class="form-control" required placeholder="Lütfen Konu Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Mesaj</label>
                <div class="col-md-12">
                    <input type="text" name="Message" value="@Model.Message" class="form-control" required placeholder="Lütfen Mesaj Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Dil</label>
                <div class="col-md-10">
                    @Html.DropDownList("LangTableID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LangTableID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Aktif Durumu</label>
                <div class="col-md-12">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActive) Aktif | Pasif
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-outline-primary"><i class="fa fa-pencil"></i> Yeni Başvuru Form Güncelle</button>
                        <a href="/Admin/Dashboard/ApplicationForm" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
            }

        </div>
    </div>
</div>
