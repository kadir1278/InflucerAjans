@model InflucerEntity.Entity.tblAPI

@{
    ViewBag.Title = "UpdateAPI";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h3>Yeni API Güncelle</h3>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <img src="~/Areas/Admin/Context/mekasoftware/180x180-M.png" alt="Meka Software" width="50" />
                </div>
            </div>
        </div>
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Yeni API Güncelle</h4>
                </div>
            </div>
            <!-- Buraya Form Kısmını Ekle -->
            @using (Html.BeginForm("UpdateAPI", "API", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)

                    <div class="form-group">
                        <label class="control-label col-md-2">Anahtar</label>
                        <div class="col-md-10">
                            <input type="text" name="Key" value="@Model.Key" class="form-control" required placeholder="Lütfen Anahtar Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.Key, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Güvenlik Anahtarı</label>
                        <div class="col-md-10">
                            <input type="text" name="SecretKey" value="@Model.SecretKey" class="form-control" required placeholder="Lütfen Güvenlik Anahtarı Giriniz" />
                            @Html.ValidationMessageFor(model => model.SecretKey, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Başlık</label>
                        <div class="col-md-10">
                            <input type="text" name="Title" value="@Model.Title" class="form-control" required placeholder="Lütfen Başlık Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="control-label col-md-2">Aktif Durumu</label>
                        <div class="col-md-12">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.IsActive) Aktif | Pasif
                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-outline-primary"><i class="fa fa-pencil"></i> Yeni API Güncelle</button>
                                <a href="/Admin/Dashboard/API" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
