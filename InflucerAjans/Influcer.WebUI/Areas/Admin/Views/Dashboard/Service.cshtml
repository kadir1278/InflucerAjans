
@{
    ViewBag.Title = "Service";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model IEnumerable<InflucerEntity.Entity.tblService>
<form method="post">
    <div class="card-box mb-30">
        <h2 class="h4 pd-20">Servis Listele</h2>
        <table class="data-table table nowrap">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Resim</th>
                    <th>Kısa Açıklama</th>
                    <th>Son Güncelleme Tarihi</th>
                    <th>Aktif Durumu</th>
                    <th class="datatable-nosort">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        @if (item.ImageVideoPath.EndsWith(".PNG") || item.ImageVideoPath.EndsWith(".JPG") || item.ImageVideoPath.EndsWith(".JPEG") || item.ImageVideoPath.EndsWith(".GIF") || item.ImageVideoPath.EndsWith(".TIFF") || item.ImageVideoPath.EndsWith(".jpg") || item.ImageVideoPath.EndsWith(".png") || item.ImageVideoPath.EndsWith(".jpeg") || item.ImageVideoPath.EndsWith(".tiff") || item.ImageVideoPath.EndsWith(".gif"))
                        {
                            <td><img src="~/Image/Services/@item.ImageVideoPath" width="150" /></td>
                        }
                        else if (item.ImageVideoPath.EndsWith(".avi") || item.ImageVideoPath.EndsWith(".AVI") || item.ImageVideoPath.EndsWith(".mp4") || item.ImageVideoPath.EndsWith(".MP4") || item.ImageVideoPath.EndsWith(".mov") || item.ImageVideoPath.EndsWith(".MOV") || item.ImageVideoPath.EndsWith(".flv") || item.ImageVideoPath.EndsWith(".FLV") || item.ImageVideoPath.EndsWith(".mpg") || item.ImageVideoPath.EndsWith(".MPG"))
                        {
                            <td>
                                <video width="150" height="150" controls>
                                    <source src="~/Image/Services/@item.ImageVideoPath" type="video/mp4">
                                </video>
                            </td>
                        }
                        <td>@item.ShortContent</td>
                        <td>@item.LastDateTime.ToString("dd:MM:yyyy")</td>
                        @if (item.IsActive == true)
                        {
                            <td><span class="badge badge-success"><i class="fa fa-check"></i> Aktif</span></td>
                        }
                        else
                        {
                            <td><span class="badge badge-danger"><i class="fa fa-remove"></i> Pasif</span></td>
                        }
                        <td>
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" href="/Admin/Service/UpdateService/@item.ID"><i class="dw dw-edit2"></i> Güncelle</a>
                                    <a class="dropdown-item" onclick="return confirm('Silmek istediğinize eminmisiniz ?')" href="/Admin/Service/DeleteService/@item.ID"><i class="dw dw-delete-3"></i> Sil</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
