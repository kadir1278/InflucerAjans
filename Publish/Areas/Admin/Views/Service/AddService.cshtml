@model Influencer.Entities.Entity.Service

@{
    ViewBag.Title = "AddService";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h3>Yeni Servis Ekle</h3>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <img src="~/Areas/Admin/Context/mekasoftware/180x180-M.png" alt="Meka Software" width="50" />
                </div>
            </div>
        </div>
        @if (ViewBag.Mesaj != null)
        {
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Hata Mesajı</h4>
                    </div>
                </div>
                <div>
                    <p>@ViewBag.Mesaj</p>
                </div>
            </div>}
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Yeni Servis Ekle</h4>
                </div>
            </div>
            <!-- Buraya Form Kısmını Ekle -->
            @using (Html.BeginForm("AddService", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Başlık</label>
                <div class="col-md-12">
                    <input type="text" name="Title" class="form-control" required placeholder="Lütfen Başlık Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">İçerik</label>
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Content)
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Resim</label>
                <div class="col-md-12">
                    <input type="file" name="ImageVideoPath" required class="form-control" />
                    @Html.ValidationMessageFor(model => model.ImageVideoPath, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Kısa Açıklama</label>
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.ShortContent, new { @class = "form-control", style = "width:100%" })
                    @Html.ValidationMessageFor(model => model.ShortContent, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2">Sayfa URL</label>
                <div class="col-md-12">
                    <select class="custom-select2 form-control" name="Icon" required style="width: 100%; height: 38px;">
                        <optgroup label="Lütfen Sayfanızı Seçiniz...">
                            <option value="fa fa-area-chart">Alan Grafik</option>
                            <option value="fa fa-line-chart">Çizgi Grafik</option>
                            <option value="fa fa-bar-chart">Grafik Çubuğu</option>
                            <option value="fa fa-pie-chart">Yuvarlak Diyagram</option>
                            <option value="fa fa-file">Dosya</option>
                            <option value="fa fa-wifi">Wifi</option>
                            <option value="fa fa-universtiy">Bina</option>
                            <option value="fa fa-space-suttle">Uzay Mekiği</option>
                            <option value="fa fa-search-plus">Arama</option>
                            <option value="fa fa-commenting">Yorum Balonu</option>
                            <option value="fa fa-calendar">Takvim</option>
                            <option value="fa fa-book">Kitap</option>
                            <option value="fa fa-briefcase">Evrak Çantası</option>
                            <option value="fa fa-bluetooth">Bluetooth</option>
                            <option value="fa fa-newspaper-o">Gazete</option>
                            <option value="fa fa-id-card">Kimlik Kartı</option>
                            <option value="fa fa-hourglass">Kum Saati</option>
                            <option value="fa fa-file">Dosya</option>
                            <option value="fa fa-envelope">Mail</option>
                            <option value="fa fa-cubes">Küpler</option>
                            <option value="fa fa-hangshake-o">Tokalaşma</option>
                        </optgroup>
                    </select>
                    @Html.ValidationMessageFor(model => model.Icon, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Başlık</label>
                <div class="col-md-12">
                    <input type="text" name="seoTitle" class="form-control" required placeholder="Lütfen Seo Başlık Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Anahtar Kelime</label>
                <div class="col-md-12">
                    <input type="text" name="seoKeywords" class="form-control" required placeholder="Lütfen Seo Anahtar Kelime Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoKeywords, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Açıklama</label>
                <div class="col-md-12">
                    <input type="text" name="seoDescription" class="form-control" required placeholder="Lütfen Seo Açıklama Giriniz" maxlength="170" />
                    @Html.ValidationMessageFor(model => model.seoDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Yazar</label>
                <div class="col-md-12">
                    <input type="text" name="seoAuthor" class="form-control" required placeholder="Lütfen Seo Yazar Giriniz" maxlength="60" />
                    @Html.ValidationMessageFor(model => model.seoAuthor, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Telif Hakkı</label>
                <div class="col-md-12">
                    <input type="text" name="seoCopyright" class="form-control" required placeholder="Lütfen Seo Telif Hakkı Giriniz" value="© Tüm Hakları Saklıdır. Influencer Ajans Design By MekaSoftech" maxlength="110" readonly />
                    @Html.ValidationMessageFor(model => model.seoCopyright, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Dizayn</label>
                <div class="col-md-12">
                    <input type="text" name="seoDesign" class="form-control" required placeholder="Lütfen Seo Dizayn Giriniz" value="MekaSoftech" readonly maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoDesign, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Cevap</label>
                <div class="col-md-12">
                    <input type="text" name="seoReply" class="form-control" required placeholder="Lütfen Seo Cevap Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoReply, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Konu</label>
                <div class="col-md-12">
                    <input type="text" name="seoSubject" class="form-control" required placeholder="Lütfen Seo Konu Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoSubject, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Twitter Başlık</label>
                <div class="col-md-12">
                    <input type="text" name="seoTwitterTitle" class="form-control" required placeholder="Lütfen Seo Twitter Başlık Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoTwitterTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Twitter Anahtar Kelime</label>
                <div class="col-md-12">
                    <input type="text" name="seoTwitterKeywords" class="form-control" required placeholder="Lütfen Seo Twitter Anahtar Kelime Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoTwitterKeywords, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Twitter Açıklama</label>
                <div class="col-md-12">
                    <input type="text" name="seoTwitterDescription" class="form-control" required placeholder="Lütfen Seo Twitter Açıklama Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoTwitterDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Twitter URL</label>
                <div class="col-md-12">
                    <input type="text" name="seoTwitterUrl" class="form-control" required placeholder="Seo Twitter URL" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoTwitterUrl, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Facebook Başlık</label>
                <div class="col-md-12">
                    <input type="text" name="seoFacebookTitle" class="form-control" required placeholder="Lütfen Seo Facebook Başlık Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoFacebookTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Facebook Anahtar Kelime</label>
                <div class="col-md-12">
                    <input type="text" name="seoFacebookKeywrods" class="form-control" required placeholder="Lütfen Seo Facebook Anahtar Kelime Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoFacebookKeywrods, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Facebook Açıklama</label>
                <div class="col-md-12">
                    <input type="text" name="seoFacebookDescription" class="form-control" required placeholder="Lütfen Seo Facebook Açıklama Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoFacebookDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Facebook URL</label>
                <div class="col-md-12">
                    <input type="text" name="seoFacebookUrl" class="form-control" required placeholder="Lütfen Seo Facebook URL Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoFacebookUrl, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Dil</label>
                <div class="col-md-12">
                    @Html.DropDownList("LangTableID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LangTableID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-outline-success"><i class="fa fa-check"></i> Yeni Servis Ekle</button>
                        <a href="/Admin/Dashboard/Service" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
            }
            <!--Form bitiş-->
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Editor/ckeditor/ckeditor.js"></script>
    <script src="~/Editor/ckfinder/ckfinder.js"></script>
    <script type="text/javascript">
        var editor = CKEDITOR.instances['Content'];
        if (editor) { editor.destroy(true); }
        CKEDITOR.replace('Content', {
            enterMode: CKEDITOR.ENTER_BR,
        });
    CKFinder.setupCKEditor(null, '@Url.Content("~/Editor/ckfinder/")');
    </script>
}