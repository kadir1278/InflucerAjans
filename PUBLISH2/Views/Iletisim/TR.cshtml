
@{
    ViewBag.Title = "TR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                @{
                    Html.RenderAction("PartialContact", "Iletisim");
                }
            </div>
            <div class="col-lg-8">
                <form class="contact-form" action="/tr/iletisim" method="post">
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="text" name="NameSurname" required placeholder="Adınız Soyadınız">
                        </div>
                        <div class="col-lg-6">
                            <input type="email" name="Email" required placeholder="Mail Adresiniz">
                        </div>
                        <div class="col-lg-6">
                            <input type="tel" maxlength="11" name="Phone" required placeholder="Telefonunuzu Giriniz">
                        </div>
                        <div class="col-lg-6">
                            <input type="text" name="Subject" required placeholder="Konunuzu Yazınız">
                        </div>
                        <div class="col-lg-4">
                        </div>
                        <div class="col-lg-12 mb-5">
                            <textarea class="text-msg" name="Content" placeholder="Mesajınızı Giriniz."></textarea>
                            <button class="site-btn" type="submit">Mesaj Gönder</button>
                        </div>
                        @if (ViewBag.Mesaj != null)
                        {
                            <div class="col-lg-12">
                                <p class="alert alert-info">@ViewBag.Mesaj</p>
                            </div>
                        }
                        @if (ViewBag.Hata != null)
                        {
                            <div class="col-lg-12">
                                <p class="alert alert-danger">@ViewBag.Hata</p>
                            </div>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!-- Contact section end  -->