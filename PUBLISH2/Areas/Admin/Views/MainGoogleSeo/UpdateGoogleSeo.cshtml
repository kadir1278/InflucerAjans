@model Influencer.Entities.Entity.MainGoogleSeo

@{
    ViewBag.Title = "UpdateGoogleSeo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h3>Yeni Google Seo Güncelle</h3>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <img src="~/Areas/Admin/Context/mekasoftware/180x180-M.png" alt="Meka Software" width="50" />
                </div>
            </div>
        </div>
        @if (ViewBag.Mesaj != null)
        {
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Hata Mesajı</h4>
                    </div>
                </div>
                <div>
                    <p>@ViewBag.Mesaj</p>
                </div>
            </div>
        }
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Yeni Google Seo Güncelle</h4>
                </div>
            </div>
            <!-- Buraya Form Kısmını Ekle -->
            @using (Html.BeginForm("UpdateGoogleSeo", "MainGoogleSeo", FormMethod.Post, new { enctype = "multipart/form-data" }))

            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Google Seo Güncelle</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)

                    <div class="form-group">
                        <label class="control-label col-md-2">Sayfa Adı</label>
                        <div class="col-md-12">
                            <input type="text" name="PageName" value="@Model.PageName" class="form-control" required placeholder="Lütfen Sayfa Adı Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.PageName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Sayfa URL</label>
                        <div class="col-md-12">
                            <select class="custom-select2 form-control" name="PageUrl" required style="width: 100%; height: 38px;">
                                <optgroup label="Lütfen Sayfanızı Seçiniz...">
                                    <option value="/">Anasayfa</option>
                                    <option value="/hakkimizda">Hakkımızda</option>
                                    <option value="/iletisim">İletişim</option>
                                    <option value="/musteri-hizmetleri">Müşteri Hizmetleri</option>
                                    <option value="/teknik-destek">Teknik Destek</option>
                                    <option value="/bize-bildirin">Bize Bildirin</option>
                                    <option value="/ekibimiz">Ekibimiz</option>
                                </optgroup>
                            </select>
                            @Html.ValidationMessageFor(model => model.PageUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- seo start-->
                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Başlık</label>
                        <div class="col-md-12">
                            <input type="text" name="seoTitle" class="form-control" value="@Model.seoTitle" required placeholder="Lütfen Seo Başlık Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoTitle, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Anahtar Kelime</label>
                        <div class="col-md-12">
                            <input type="text" name="seoKeywords" class="form-control" value="@Model.seoKeywords" required placeholder="Lütfen Seo Anahtar Kelime Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoKeywords, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Açıklama</label>
                        <div class="col-md-12">
                            <input type="text" name="seoDescription" class="form-control" value="@Model.seoDescription" required placeholder="Lütfen Seo Açıklama Giriniz" maxlength="170" />
                            @Html.ValidationMessageFor(model => model.seoDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Yazar</label>
                        <div class="col-md-12">
                            <input type="text" name="seoAuthor" class="form-control" value="@Model.seoAuthor" required placeholder="Lütfen Seo Yazar Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoAuthor, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Telif Hakkı</label>
                        <div class="col-md-12">
                            <input type="text" name="seoCopyright" class="form-control" readonly value="Copyright © Tüm Hakları Saklıdır CNR Su Teknolojileri A.Ş. Design By MekaSoftech" required maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoCopyright, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Dizayn</label>
                        <div class="col-md-12">
                            <input type="text" name="seoDesign" class="form-control" readonly value="MekaSoftech" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoDesign, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Cevap</label>
                        <div class="col-md-12">
                            <input type="text" name="seoReply" class="form-control" value="@Model.seoReply" required placeholder="Lütfen Seo Cevap Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoReply, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Konu</label>
                        <div class="col-md-12">
                            <input type="text" name="seoSubject" class="form-control" value="@Model.seoSubject" required placeholder="Lütfen Seo Konu Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoSubject, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Twitter Başlık</label>
                        <div class="col-md-12">
                            <input type="text" name="seoTwitterTitle" class="form-control" value="@Model.seoTwitterTitle" required placeholder="Lütfen Seo Twitter Başlık Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoTwitterTitle, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Twitter Anahtar Kelime</label>
                        <div class="col-md-12">
                            <input type="text" name="seoTwitterKeywords" class="form-control" value="@Model.seoTwitterKeywords" required placeholder="Lütfen Seo Twitter Anahtar Kelime Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoTwitterKeywords, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Twitter Açıklama</label>
                        <div class="col-md-12">
                            <input type="text" name="seoTwitterDescription" class="form-control" value="@Model.seoTwitterDescription" required placeholder="Lütfen Seo Twitter Açıklama Giriniz" maxlength="170" />
                            @Html.ValidationMessageFor(model => model.seoTwitterDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Twitter URL</label>
                        <div class="col-md-12">
                            <input type="text" name="seoTwitterUrl" class="form-control" value="@Model.seoTwitterUrl" required placeholder="Lütfen Seo Twitter URL Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoTwitterUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Facebook Başlık</label>
                        <div class="col-md-12">
                            <input type="text" name="seoFacebookTitle" class="form-control" value="@Model.seoFacebookTitle" required placeholder="Lütfen Seo Facebook Başlık Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoFacebookTitle, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Facebook Anahtar Kelime</label>
                        <div class="col-md-12">
                            <input type="text" name="seoFacebookKeywrods" class="form-control" value="@Model.seoFacebookKeywrods" required placeholder="Lütfen Seo Facebook Anahtar Kelime Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoFacebookKeywrods, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Facebook Açıklama</label>
                        <div class="col-md-12">
                            <input type="text" name="seoFacebookDescription" class="form-control" value="@Model.seoFacebookDescription" required placeholder="Lütfen Seo Facebook Açıklama Giriniz" maxlength="170" />
                            @Html.ValidationMessageFor(model => model.seoFacebookDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Seo Facebook URL</label>
                        <div class="col-md-12">
                            <input type="text" name="seoFacebookUrl" class="form-control" value="@Model.seoFacebookUrl" required placeholder="Lütfen Seo Facebook URL Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.seoFacebookUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!--seo end-->

                    <div class="form-group">
                        @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.IsActive) Aktif | Pasif
                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12">
                            <div class="col-md-offset-2 col-md-12">
                                <button type="submit" class="btn btn-outline-primary"><i class="fa fa-pencil"></i> Google Seo Güncelle</button>
                                <a href="/Admin/Dashboard/GoogleSeo" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                            </div>
                        </div>
                    </div>
                </div>}

        </div>
    </div>
</div>

